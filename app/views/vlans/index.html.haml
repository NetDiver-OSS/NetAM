- page_title _('Vlans')
- page_action({icon: icon('plus'), path: new_vlan_path})

%section
  %table.table.table-striped
    %thead
      %tr
        %th{style: "width: 10%"}= _('Vlan ID')
        %th{style: "width: 20%"}= _('Name')
        %th{style: "width: 40%"}= _('Description')
        %th{style: "width: 30%"}
    %tbody.align-baseline
      - @vlans.each do |vlan|
        %tr
          %td= vlan.vid
          %td= vlan.name
          %td= vlan.description
          %td.project-actions.text-right
            %div.btn-group
              = link_to icon_with_text('folder', _('View')), vlan, class: 'btn btn-primary btn-sm'
              = link_to icon_with_text('pencil-square', _('Edit')), edit_vlan_path(vlan), class: 'btn btn-secondary btn-sm' if can? :edit, vlan
              = link_to icon_with_text('trash', _('Delete')), vlan, method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: _('Are you sure?')} if can? :destroy, vlan

  = paginate @vlans
