- page_title "<strong>#{@vlan.name.upcase}</strong> - <small>#{@vlan.vid}</small>"

- page_action({icon: '<i class="fas fa-edit"></i> Edit', path: edit_vlan_path(@vlan)}) if can? :edit, @vlan

%div.row
  %div.col-12
    %div{class: "card #{'bg-dark text-white' if dark_mode?}"}
      %div.card-header
        %div.card-title
          %h3 Sections linked to #{@vlan.name.upcase} (##{@vlan.vid})
      %div.card-body.p-0
        %table.table.table-condensed
          %thead
            %tr
              %th Name
              %th Network
              %th Description
              %th{style: "width: 15%"}
          %tbody
            - @vlan.sections.each do |section|
              %tr
                %td= section.name
                %td= section.network
                %td= section.description
                %td
                  = link_to '<i class="fas fa-pencil-alt"></i> Edit'.html_safe, edit_section_path(section), class: 'btn btn-info btn-sm'
