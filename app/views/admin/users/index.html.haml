- page_title "Users"
- page_action({icon: '<i class="fas fa-plus-square"></i>', path: new_admin_user_path})

%div.row.d-flex.align-items-stretch
  - @users.each do |user|
    %div.col-12.col-sm-6.col-md-4.d-flex.align-items-stretch
      %div{class: "card  #{dark_mode? ? 'bg-dark text-white' : 'bg-light'} w-100"}
        %div.card-header.text-muted.border-bottom-0 ##{user.id}
        %div.card-body.pt-0
          %div.row
            %div.col-7
              %h2.lead
                %b= user.email
              %ul.ml-4.mb-0.fa-ul.text-muted
                %li.small
                  %span.fa-li
                    %i.fas.fa-at
                  = user.last_sign_in_ip
                %li.small
                  %span.fa-li
                    %i.fas.fa-lg.fa-calendar-alt
                  = user.last_sign_in_at
        %div.card-footer
          %div.text-right
            = link_to '<i class="fas fa-user"></i> View'.html_safe, admin_user_path(user), class: 'btn btn-primary btn-sm'
            = link_to '<i class="fas fa-pencil-alt"></i> Edit'.html_safe, edit_admin_user_path(user), class: 'btn btn-info btn-sm'
            = link_to '<i class="fas fa-trash"></i> Delete'.html_safe, admin_user_path(user), method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'Are you sure?'}
