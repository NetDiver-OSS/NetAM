- page_title _('Users')
- page_action({icon: icon('plus'), path: new_admin_user_path})

%section
  %table.table.table-striped
    %thead
      %tr
        %th{style: "width: 30%"}= _('Email')
        %th{style: "width: 20%"}= _('Last sign in IP')
        %th{style: "width: 20%"}= _('Last sign in')
        %th{style: "width: 30%"}
    %tbody
      - @users.each do |user|
        %tr
          %td= user.email
          %td= user.last_sign_in_ip
          %td= user.last_sign_in_at
          %td.project-actions.text-right
            %div.btn-group
              = link_to icon_with_text('eye', _('View')), admin_user_path(user), class: 'btn btn-primary btn-sm'
              = link_to icon_with_text('pencil-square', _('Edit')), edit_admin_user_path(user), class: 'btn btn-secondary btn-sm'
              = link_to icon_with_text('trash', _('Delete')), admin_user_path(user), method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: _('Are you sure?')}

  = paginate @users
