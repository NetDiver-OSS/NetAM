- page_title "API Keys"
- page_action({icon: '<i class="fas fa-plus-square"></i>', path: api_keys_path, method: :post})

%section
  %div{class: "card #{'bg-dark text-white' if dark_mode? }"}
    %div.card-header
      %h3.card-title Tokens
    %div.card-body.p-0
      %table.table.table-striped.projects
        %thead
          %tr
            %th{style: "width: 20%"} Token
            %th{style: "width: 30%"}
        %tbody
          - @api_keys.each do |api_key|
            %tr
              %td
                %a= api_key.access_token
                %br
                %small= api_key.expires_at
              %td.project-actions.text-right
                %div.btn-group
                  = link_to '<i class="fas fa-trash"></i> Delete'.html_safe, api_key, method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'Are you sure?'}
