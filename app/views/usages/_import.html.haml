= form_with(url: import_section_usages_path(@section), local: true, multipart: true) do |form|
  %div.card-header
    %h3.card-title= _('Import usages with CSV')
  %div.card-body
    %div.row
      %div.col-6
        %h5= _('Requirements')
        %p
          = _('Massive import usages by csv injections. You must have CSV formated with the following header :')
          %strong hostname,ip,description,state
        %p
          = _('State available are :')
          %strong= 'ACTIVED'
          |
          %strong= 'DOWN'
          |
          %strong= 'DHCP'
          |
          %strong= 'LOCKED'
      %div.col-6
        %div.form-group
          = form.label _('File')
          %div.input-group
            %div.custom-file
              = form.file_field :file, accept: 'text/csv', class: "custom-file-input"
              %label.custom-file-label= _('Choose file')

  %div.card-footer
    = form.submit _('Import'), class: 'btn btn-primary float-right'
