= form_with(url: '', method: :get, local: true) do |form|
  %div.row
    %div.col-5
      %div.form-floating
        = form.text_field :ip, class: "form-control #{dark_mode_class}", placeholder: '192.168.1.50', value: params[:ip]
        = form.label :ip, _('Network')

    %div.col-5
      %div.form-floating
        = form.select :subnet, NetAM::Utils::IPCalculator::PREFIX_TO_HOSTS_AVAILABLE, {selected: params[:subnet].to_i}, {class: "form-control #{dark_mode_class}" }
        = form.label :subnet, _('Hosts per Subnet')

    %div.col-2
      %div.d-grid
        = form.button _('Calculate'), class: 'btn btn-primary align-bottom py-3'
