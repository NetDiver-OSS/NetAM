= form_with(url: '', method: :get, local: true) do |form|
  %div.grid.grid-cols-7.gap-3
    %div{ class: 'col-span-7 sm:col-span-3' }
      = form.label :network, _('Network'), class: 'block text-sm font-medium text-gray-700 dark:text-gray-200'
      = form.text_field :network, class: 'input', placeholder: '192.168.1.0/24', value: params[:network]

    %div{ class: 'col-span-7 sm:col-span-3' }
      = form.label :subnet, _('Wanted subnets'), class: 'block text-sm font-medium text-gray-700 dark:text-gray-200'
      = form.text_field :split_count, class: 'input', placeholder: '2', value: params[:split_count]

    %div{ class: 'col-span-7 sm:col-span-1 flex items-center justify-center sm:mt-5' }
      = form.button _('Calculate'), class: 'w-full rounded-md border border-transparent shadow px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:ml-3 sm:w-auto sm:text-sm'
