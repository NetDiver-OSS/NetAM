- page_title _('DNS Resolver')

= render 'utils/formdnsresolver'

- if @dns_resolutions
  %div{ class: 'bg-white dark:bg-gray-600 my-8 shadow overflow-hidden sm:rounded-lg' }
    %div{ class: 'px-4 py-5 sm:px-6' }
      %h3{ class: 'text-lg leading-6 font-medium text-gray-900 dark:text-gray-200' }= _('Request')

    %dl
      %div{ class: 'bg-gray-50 dark:bg-gray-500 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6' }
        %dt{ class: 'text-sm font-medium text-gray-500 dark:text-gray-300' }= _('Request')
        %dd{ class: 'mt-1 text-sm text-gray-900 dark:text-gray-100 sm:mt-0 sm:col-span-2' }= @dns_resolutions[:entry]

      %div{ class: 'bg-white dark:bg-gray-600 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6' }
        %dt{ class: 'text-sm font-medium text-gray-500 dark:text-gray-300' }= _('Type')
        %dd{ class: 'mt-1 text-sm text-gray-900 dark:text-gray-100 sm:mt-0 sm:col-span-2' }= @dns_resolutions[:type]

    %div{ class: 'px-4 py-5 sm:px-6' }
      %h3{ class: 'text-lg leading-6 font-medium text-gray-900 dark:text-gray-200' }= _('Result')
      - @dns_resolutions[:result].each do |dns_resolution|
        %div{ class: 'bg-gray-50 dark:bg-gray-500 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6' }
          %dd{ class: 'mt-1 text-sm text-gray-900 dark:text-gray-100 sm:mt-0 sm:col-span-2' }= dns_resolution
