- page_title _('IP calculator')

= render 'utils/form'

- if @address
  %div.row.mt-3
    %div.col-4
      %div.input-group
        %span.input-group-text= _('Network')
        %input.form-control{disabled: true, type: 'text', value: @address.network}
    %div.col-4
      %div.input-group
        %span.input-group-text= _('Mask')
        %input.form-control{disabled: true, type: 'text', value: @address.mask}
    %div.col-4
      %div.input-group
        %span.input-group-text= _('Available IP')
        %input.form-control{disabled: true, type: 'text', value: @address.nb_hosts}

  %div.row.mt-3
    - unless @address.broadcast.nil?
      %div.col-4
        %div.input-group
          %span.input-group-text= _('Broadcast')
          %input.form-control{disabled: true, type: 'text', value: @address.broadcast}

    - unless @address.first_address.nil?
      %div.col-4
        %div.input-group
          %span.input-group-text= _('First IP')
          %input.form-control{disabled: true, type: 'text', value: @address.first_address}

    - unless @address.last_address.nil?
      %div.col-4
        %div.input-group
          %span.input-group-text= _('Last IP')
          %input.form-control{disabled: true, type: 'text', value: @address.last_address}
