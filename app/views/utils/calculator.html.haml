- page_title _('IP calculator')

= render 'utils/form'

- if @address
  %div.card.mt-4{class: dark_mode_class}
    %div.card-header
      %h3.card-title= params[:ip]
    %div.card-body
      %div.row
        %div.col-4
          %div.input-group
            %div.input-group-prepend
              %span.input-group-text{class: dark_mode_class}= _('Network')
            %input.form-control{class: dark_mode_class, disabled: true, type: 'text', value: @address.network}
        %div.col-4
          %div.input-group
            %div.input-group-prepend
              %span.input-group-text{class: dark_mode_class}= _('Mask')
            %input.form-control{class: dark_mode_class, disabled: true, type: 'text', value: @address.mask}
        %div.col-4
          %div.input-group
            %div.input-group-prepend
              %span.input-group-text{class: dark_mode_class}= _('Available IP')
            %input.form-control{class: dark_mode_class, disabled: true, type: 'text', value: @address.nb_hosts}

      %div.row.mt-3
        - unless @address.broadcast.nil?
          %div.col-4
            %div.input-group
              %div.input-group-prepend
                %span.input-group-text{class: dark_mode_class}= _('Broadcast')
              %input.form-control{class: dark_mode_class, disabled: true, type: 'text', value: @address.broadcast}

        - unless @address.first_address.nil?
          %div.col-4
            %div.input-group
              %div.input-group-prepend
                %span.input-group-text{class: dark_mode_class}= _('First IP')
              %input.form-control{class: dark_mode_class, disabled: true, type: 'text', value: @address.first_address}

        - unless @address.last_address.nil?
          %div.col-4
            %div.input-group
              %div.input-group-prepend
                %span.input-group-text{class: dark_mode_class}= _('Last IP')
              %input.form-control{class: dark_mode_class, disabled: true, type: 'text', value: @address.last_address}
