<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <div class="content">Forgot your password?</div>
    </h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'ui large form'}) do |f| %>
      <div class="ui stacked segment">

        <div class="field">
          <div class="ui fluid labeled input">
            <div class="ui label">
              <i class="fas fa-user"></i>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email address' %>
          </div>
        </div>

        <%= f.submit "Send me reset password instructions", class: "ui fluid teal submit button" %>
      </div>

      <%= render "devise/shared/error_messages", resource: resource %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

