%div.card{class: "#{'bg-dark text-white' if dark_mode?}"}
  %div.card-header
    %h3.card-title My informations
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    %div.card-body
      = render "devise/shared/error_messages", resource: resource

      %div.row
        %div.col-12
          %div.input-group.mb-3
            %div.input-group-prepend
              %span{class: "input-group-text #{'bg-dark text-white' if dark_mode?}"}
                Email
            = f.text_field :email, autocomplete: "email", class: "form-control #{'bg-dark text-white' if dark_mode?}"

        %div.col-12
          %div.input-group.mb-3
            %div.input-group-prepend
              %span{class: "input-group-text #{'bg-dark text-white' if dark_mode?}"}
                New Password
            = f.password_field :password, placeholder: "(leave blank if you don't want to change it) #{@minimum_password_length} characters minimum", autocomplete: "new-password", class: "form-control #{'bg-dark text-white' if dark_mode?}"

        %div.col-12
          %div.input-group.mb-3
            %div.input-group-prepend
              %span{class: "input-group-text #{'bg-dark text-white' if dark_mode?}"}
                Password Again
            = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control #{'bg-dark text-white' if dark_mode?}"

        %div.col-12
          %div.input-group.mb-3
            %div.input-group-prepend
              %span{class: "input-group-text #{'bg-dark text-white' if dark_mode?}"}
                Current Password
            = f.password_field :current_password, placeholder: '(we need your current password to confirm your changes)', autocomplete: "current-password", class: "form-control #{'bg-dark text-white' if dark_mode?}"

    %div.card-footer
      %div.form-check
        = f.submit nil, class: 'btn btn-primary float-right'

= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-outline-danger btn-block'
