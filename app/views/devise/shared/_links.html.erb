<%- if devise_mapping.confirmable? || devise_mapping.lockable? %>
  <div class="ui fluid buttons">
    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'ui inverted orange button' %>
    <% end %>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'ui inverted orange button' %>
    <% end %>
  </div>
<% end %>
