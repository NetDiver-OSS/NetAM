%div.modal.fade#totp_to_valid{ data: {backdrop: 'static', keyboard: 'false'}, tabindex: '-1', aria: {labelledby: 'staticBackdropLabel' }}
  %div.modal-dialog
    %div.modal-content{class: "#{'bg-dark text-white' if dark_mode?}"}
      = form_with(url: validate_account_two_factor_auths_path, local: true) do |form|
        %div.modal-header
          %h5.modal-title Please validate TOTP code !
        %div.modal-body
          %div.text-center.bg-light
            = @qrcode.html_safe
            %p
              Secret: #{current_user.otp_secret}
          %div.form-group
            = form.label 'OTP code'
            = form.text_field :otp_attempt, class: "form-control #{'bg-dark text-white' if dark_mode?}"
        %div.modal-footer
          = form.submit 'Validate', class: 'btn btn-primary float-right'
