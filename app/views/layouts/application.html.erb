<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="x-ua-compatible" content="ie=edge">

  <title>NetAM</title>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_pack_tag 'application' %>

  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition <%= devise_controller? ? 'login-page' : 'layout-top-nav' %>">
<% if devise_controller? %>
  <%= yield %>
<% else %>
  <div class="wrapper">
    <%= render 'layouts/navbar' %>

    <div class="content-wrapper <%= 'bg-dark text-white' if dark_mode? %>">
      <div class="content-header">

        <% unless notice.nil? %>
          <div class="alert alert-info alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-info"></i> Notice</h5>
            <%= notice %>
          </div>
        <% end %>

        <% unless alert.nil? %>
          <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-ban"></i> Error</h5>
            <%= alert %>
          </div>
        <% end %>

        <div class="container">
          <div class="row mb-2">
            <div class="col-6">
              <h1><%= page_title.html_safe %></h1>
            </div>
            <div class="col-6">
              <div class="float-right">
                <%= page_action.html_safe %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="content">
        <div class="container">
          <%= yield %>
        </div>
      </div>
    </div>

    <%= render 'layouts/footer' %>
  </div>
<% end %>
</body>
</html>
